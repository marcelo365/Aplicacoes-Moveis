<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText

            android:id="@+id/inputDevice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="IP do dispositivo"
            android:inputType="text" />

        <Button

            android:id="@+id/idConnectButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Conectar" />

        <Button

            android:id="@+id/idSendButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enviar Mensagem" />

        <Button

            android:id="@+id/idInRangeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="In range" />

        <Button

            android:id="@+id/idInGroupButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="In network" />

        <Button

            android:id="@+id/idDisconnectButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Desconectar" />

        <TextView

            android:id="@+id/textOutput"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#F0F0F0"
            android:gravity="top|start"
            android:padding="8dp"
            android:scrollbars="vertical"
            android:text="Mensagens:" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>